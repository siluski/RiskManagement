{
  "name": "risk-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5.9.2",
    "@sap/cds-mtx": "^2.5.3",
    "@sap/hdi-deploy": "^4.3.2",
    "@sap/xsenv": "^3.2.1",
    "@sap/xssec": "^3.2.12",
    "cfenv": "^1.2.4",
    "express": "^4",
    "hdb": "^0.18.3",
    "passport": "^0.5.2",
    "xhr2": "^0.2.1"
  },
  "engines": {
    "node": "^14.0.0",
    "npm": "8.6.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.2",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "sapux": [
    "app/risks"
  ],
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "[development]": {
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
          }
        },
        "[production]": {
          "credentials": {
            "destination": "API_BUSINESS_PARTNER"
          }
        }
      },
      "db": {
        "kind": "sql"
      },
      "xsuaa": {
        "kind": "xsuaa"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
